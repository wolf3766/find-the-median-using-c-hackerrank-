#include <bits/stdc++.h>
using namespace std;
int main()
{
    int n;
     cin>>n;
     int a[n];
     for(int i=0;i<n;i++)
     {
         cin>>a[i];
     }
     int f;
     sort(a,a+n);
     if((n%2)!=0)
     {
        f = ceil(n/2);
        cout<<a[f]<<endl;
     } 
     else
     {
         f = n/2;
         int g = f+1;
         cout<<(a[f]+a[g])/2<<endl;
         
     }
    return 0;
}
